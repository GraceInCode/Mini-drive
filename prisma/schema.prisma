generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  folders   Folder[]
  files     File[]
}

model Folder {
  id          String       @id @default(cuid())
  name        String
  owner       User         @relation(fields: [ownerId], references: [id])
  ownerId     String
  files       File[]
  sharedLinks SharedLink[]
  createdAt   DateTime     @default(now())
}

model File {
  id         String   @id @default(uuid())
  name       String
  size       Int
  mimeType   String
  localPath  String? // local filesystem path
  url        String? // remote URL (e.g., Cloudinary URL)
  folder     Folder?  @relation(fields: [folderId], references: [id])
  folderId   String?
  owner      User     @relation(fields: [ownerId], references: [id])
  ownerId    String
  uploadedAt DateTime @default(now())
}

model SharedLink {
  id        String   @id @default(uuid())
  folder    Folder   @relation(fields: [folderId], references: [id])
  folderId  String
  token     String   @unique
  expireAt  DateTime
  createdAt DateTime @default(now())
}

model Session {
  id        String    @id @default(cuid())
  sid       String    @unique
  data      String
  expiresAt DateTime?
}
