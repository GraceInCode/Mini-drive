generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  files     File[]
  folders   Folder[]
}

model Folder {
  id          String       @id @default(cuid())
  name        String
  ownerId     String
  createdAt   DateTime     @default(now())
  files       File[]
  owner       User         @relation(fields: [ownerId], references: [id])
  sharedLinks SharedLink[]
}

model File {
  id         String   @id @default(uuid())
  name       String
  size       Int
  mimeType   String
  localPath  String?
  url        String?
  folderId   String?
  ownerId    String
  uploadedAt DateTime @default(now())
  folder     Folder?  @relation(fields: [folderId], references: [id])
  owner      User     @relation(fields: [ownerId], references: [id])
}

model SharedLink {
  id        String   @id @default(uuid())
  folderId  String
  token     String   @unique
  expireAt  DateTime
  createdAt DateTime @default(now())
  folder    Folder   @relation(fields: [folderId], references: [id])
}

model Session {
  sid       String    @unique
  data      String
  id        String    @id @default(cuid())
  expiresAt DateTime?
}
